<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Coffenew.CoffeeActivity3">


    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        />
    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/Cappucinoimage"
        android:layout_width="315dp"
        android:layout_height="216dp"
        android:src="@drawable/rectan11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/cappucinotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cappucino"
        android:textColor="#2F2D2C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cappucinoimage"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/with_Chocolate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="with Chocolate"
        android:textColor="#9B9B9B"
        android:textSize="12sp"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cappucinotext"/>

    <ImageView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frame_4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/with_Chocolate_text"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        android:layout_marginTop="20dp" />


    <TextView
        android:id="@+id/Descriptiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textlarge"
        android:layout_width="315dp"
        android:layout_height="69dp"
        android:text="A cappuccino is an approximately 150 ml (5
        oz) beverage, with 25 ml of espresso coffee and 85ml of fresh milk the fo.. "
        android:textStyle="normal"
        android:textColor="#9B9B9B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Descriptiontext"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/textlargeread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read More"
        android:textStyle="bold"
        android:textColor="#C67C4E"
        app:layout_constraintStart_toStartOf="@id/textlarge"
        app:layout_constraintTop_toTopOf="@+id/textlarge"
        android:layout_marginStart="200dp"
        app:layout_constraintEnd_toEndOf="@+id/textlarge"
        android:layout_marginTop="38dp"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/Sizetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textlargeread"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stext"
        android:layout_width="96dp"
        android:layout_height="43dp"
        app:cornerRadius="12dp"
        android:backgroundTint="#DEDEDE"
        android:text="S"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sizetext"
        android:layout_marginStart="33dp"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mtext"
        android:layout_width="96dp"
        android:layout_height="43dp"
        app:cornerRadius="12dp"
        android:backgroundTint="#C67C4E"
        android:text="M"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/stext"
        app:layout_constraintTop_toBottomOf="@+id/Sizetext"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ltext"
        android:layout_width="96dp"
        android:layout_height="43dp"
        app:cornerRadius="12dp"
        android:backgroundTint="#DEDEDE"
        android:text="L"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/mtext"
        app:layout_constraintTop_toBottomOf="@+id/Sizetext"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/stext"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Price"
        android:layout_marginStart="30dp"
        android:textColor="#9B9B9B"
        android:layout_marginTop="39dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="217dp"
        android:layout_height="62dp"
        android:text="Buy Now"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C67C4E"
        tools:ignore="MissingConstraints"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@+id/mtext"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="128dp"
        android:layout_marginTop="33dp"
        />

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:layout_constraintStart_toStartOf="parent"
        android:text="$ 4.53"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:textColor="#C67C4E"
        android:layout_marginTop="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>