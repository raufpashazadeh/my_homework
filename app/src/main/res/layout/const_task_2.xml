<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image"
        android:layout_width="321dp"
        android:layout_height="251dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/ic_group_31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


<TextView
    android:id="@+id/welcome"
    android:layout_width="204dp"
    android:layout_height="45dp"
    android:text="Get Started"
    android:textSize="36sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="180dp"
    android:layout_marginStart="17dp"
    android:textColor="#252525"
    />
    
    <TextView
        android:id="@+id/free"
        android:layout_width="169dp"
        android:layout_height="18dp"
        android:text="by creating a free account."
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        android:layout_marginTop="3dp"
        android:layout_marginStart="17dp"
        tools:ignore="MissingConstraints"
        android:textColor="#252525"/>

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/fullname"
    android:layout_width="300dp"
    android:layout_height="50dp"
    app:hintTextColor="@color/black"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/free"
    tools:ignore="MissingConstraints"
    app:endIconMode="custom"
    app:endIconDrawable="@drawable/ic_user"
    android:layout_marginTop="35dp"
    />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Full name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/free"
        android:background="@null"
        android:layout_marginTop="35dp"
        android:paddingStart="30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        app:endIconDrawable="@drawable/ic_mail"
        app:endIconMode="custom"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullname"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="19dp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Valid email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullname"
        android:background="@null"
        android:layout_marginTop="19dp"
        android:paddingStart="30dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        app:endIconDrawable="@drawable/ic_smartphone"
        app:endIconMode="custom"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="19dp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Phone number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:background="@null"
        android:layout_marginTop="19dp"
        android:paddingStart="30dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        app:endIconDrawable="@drawable/ic_lock"
        app:endIconMode="custom"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="19dp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/next"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Strong Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        android:background="@null"
        android:layout_marginTop="19dp"
        android:paddingStart="30dp"
       />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Next"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginTop="115dp"
        android:backgroundTint="#FF3951"
        app:cornerRadius="10dp"
        android:textColor="#FCFCFC"
        android:textSize="20sp"
        app:icon="@drawable/baseline_keyboard_arrow_right_24"
        app:iconGravity="textEnd" />



<TextView
    android:id="@+id/new1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Already a member?"
    tools:ignore="MissingConstraints"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/next1"
    app:layout_constraintEnd_toStartOf="@+id/register"
    app:layout_constraintBottom_toBottomOf="parent"
  android:layout_marginStart="73dp" />
    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In "
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toEndOf="@+id/new1"
        app:layout_constraintTop_toBottomOf="@+id/next1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="115dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>






